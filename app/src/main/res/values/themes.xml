<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Androidbaseproject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bold_text</item>
        <item name="colorPrimaryVariant">@color/white_background</item>
        <item name="colorOnPrimary">@color/black_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rose_red</item>
        <item name="colorSecondaryVariant">@color/wine_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DenseButton" parent="Widget.MaterialComponents.Button" />
    <style name="DenseButton.PrimaryDenseButton">
        <item name="backgroundTint">@color/btn_contained</item>
        <item name="android:paddingStart">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_18sdp</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>
        <item name="android:paddingBottom">@dimen/_9sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/txt_btn_contained</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="cornerRadius">@dimen/_4sdp</item>
    </style>

    <style name="DenseButton.PrimaryDenseButton.ProductQuantity">
        <item name="backgroundTint">@color/btn_product_quantity</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
    </style>

    <style name="LightButton" parent="Widget.MaterialComponents.Button" />
    <style name="LightButton.PrimaryLightButton">
        <item name="backgroundTint">@color/btn_outlined</item>
        <item name="android:paddingStart">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_18sdp</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>
        <item name="android:paddingBottom">@dimen/_9sdp</item>
        <item name="android:textColor">@color/txt_btn_outlined</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">@dimen/_4sdp</item>
        <item name="strokeColor">@color/primary_stroke_color</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearance">@style/OutlinedShapeAppearance</item>
    </style>

    <style name="LightButton.NoStrokeButton" parent="LightButton.PrimaryLightButton">
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="OutlinedShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">35dp</item>
    </style>

</resources>